<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/parent_location"
            android:layout_width="181dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:drawableLeft="@drawable/ic_location_on"
            android:padding="16dp" />

        <TextView
            android:id="@+id/parent_time"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"

            android:layout_centerVertical="true"
            android:layout_marginEnd="34dp"
            android:drawableLeft="@drawable/ic_access_time"
            android:padding="16dp" />

        <ImageButton
            android:id="@+id/expendable_btn"
            android:layout_width="34dp"
            android:layout_height="23dp"
            android:layout_below="@+id/parent_location"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:visibility="visible" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
