<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="10dp"
    android:orientation="horizontal"
    android:background="@color/wine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview_bg">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_bg"
            android:orientation="vertical">


            <TextView
                android:id="@+id/parent_location"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:drawablePadding="8dp"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/parent_dist"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:drawablePadding="8dp"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/parent_date"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:drawablePadding="8dp"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                />


            <!--  <TextView
              android:id="@+id/show_dest"
              android:layout_width="277dp"
              android:layout_height="30dp"
              android:layout_weight="1"
              android:background="@color/wine"
              android:text="TextView"
              android:textColor="@color/white" />

          <TextView
              android:id="@+id/show_dist"
              android:layout_width="277dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@color/wine"
              android:text="TextView"
              android:textColor="@color/white" />-->
        </LinearLayout>


        <ImageView
            android:id="@+id/getRide_btn"
            android:layout_width="34dp"
            android:layout_height="23dp"
            android:layout_below="@+id/parent_location"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_drop_down_white_24dp"
            android:visibility="visible" />

    </LinearLayout>

</android.support.v7.widget.CardView>
